<%= form_for :product , :url => products_path, :multipart => true, :method => 'post' do |item| %>
<p>
<%= item.label :title %>
<%= item.text_field :title %>
</p>
<p>
<%= item.label :description %>
<%= item.text_area :description %>
</p>
<p>
<%= item.label :price %>
<%= item.text_field :price %>
</p>
<p>
<%= item.label :image %>
<%= item.file_field :image %>
</p>
<%= item.submit 'save product', :class => 'btn btn-success' %>
<% end %>